# Docker Compose Environment Configuration for Alkanes-RS
# This file is used by docker-compose.yaml to configure the services

# Bitcoin Core Configuration
BITCOIN_RPC_USER=bitcoinrpc
BITCOIN_RPC_PASSWORD=bitcoinrpc

# Server Ports (exposed on host)
BITCOIND_PORT=18443
METASHREW_PORT=8080
MEMSHREW_PORT=8081
ORD_PORT=8090
ESPLORA_HTTP_PORT=50010
ESPLORA_ELECTRUM_PORT=50001
JSONRPC_PORT=18888

# Logging
RUST_LOG=info
